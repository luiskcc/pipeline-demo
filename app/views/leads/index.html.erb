
<h1>Leads#index</h1>
<p>Find me in app/views/leads/index.html.erb</p>
<%= stylesheet_link_tag 'pipeline', media: 'all', 'data-turbolinks-track': 'reload' %>


<div data-controller="pipeline">
  <div class="lists">
    <% @leads.each do |lead| %>
      <div class="list" data-stage-id="prospecting" id="Prospecting" >
        <div class="list-item" draggable="true" data-lead-id="<%=lead.id %>">
          <%= lead.first_name %>
          <%= lead.email %>
          <%= lead.id %>
          <%= link_to "Lead #{lead.first_name}", lead_path(lead) %>
        </div>
      </div>
    <% end %>
      <div class="list" data-stage-id="qualification" id="Qualification"></div>
      <div class="list" data-stage-id="need_analysis" id="NeedAnalysis"></div>
      <div class="list" data-stage-id="proposal" id="Proposal"></div>
      <div class="list" data-stage-id="negotiation" id="Negotiation"></div>
      <div class="list" data-stage-id="closing_deal" id="ClosingDeal"></div>
  </div>
</div>
